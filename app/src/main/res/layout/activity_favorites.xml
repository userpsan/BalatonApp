<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favoritesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FavoritesActivity"
    android:background="@drawable/background_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/button_color"
        app:titleTextColor="@android:color/white"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="12dp"
            android:src="@drawable/menu_btn"
            android:contentDescription="Menü gomb" />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/filterButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnAllFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mind" />

        <Button
            android:id="@+id/btnOnlySights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Látnivaló"
            android:layout_marginStart="12dp" />
        <Button
            android:id="@+id/btnOnlyWithNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Megjegyzés"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_favorites"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sightsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
